---
import { format } from "date-fns";
import { m } from "@/paraglide/messages";
import { getLocale } from "@/paraglide/runtime";
---

<footer class="footer">
  <p>
    Last updated: <time>
      {
        format(new Date(), "yyyy/MM/dd")
      }
    </time>
  </p>
  <div class="lang-switch">
    Language:
    {
    getLocale() === "ja" ? (
      <span class="lang-active">Japanese</span>
      <span>/</span>
      <a href="/en" class="lang-switch-link">
        English
      </a>
    ) : (
      <a href="/" class="lang-switch-link">
        Japanese
      </a>
      <span>/</span>
      <span class="lang-active">English</span>
    )
  }
  </div>
  <p>
    <small>
      { m["footer.ga"]() }
    </small>
  </p>
</footer>

<style lang="scss">
  @use "@/assets/styles/variables" as var;

  .footer {
    width: 100%;
    padding: 1rem 1rem calc(env(safe-area-inset-bottom, 0px) + 1rem);
    background-color: var.$color-zinc-600;
    color: var.$color-text-inverse;
    font-size: 0.875rem;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    text-align: center;
  }

  .lang-switch {
    display: inline-flex;
    flex-flow: row;
    align-items: center;
    gap: 0.25rem;

    .lang-active {
      font-weight: bold;
    }

    .lang-switch-link {
      color: var.$color-text-inverse;
      transition: opacity 0.2s ease;

      &:hover {
        opacity: 0.8;
      }
    }
  }

  small {
    font-size: 0.75rem;
  }
</style>
